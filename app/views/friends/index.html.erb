<% if user_signed_in? %>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>이름</th>
        <th>이메일</th>
        <th>전화번호</th>
        <th>트위터</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.last_name + friend.first_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>

            <td><%= link_to '삭제', friend, method: :delete, data: { confirm: '확실하니?' }, class:'btn btn-outline-danger btn-sm' %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '친구 추가', new_friend_path, class:"btn btn-secondary" %>

<% else %>

  <h1>헬로 월드!!</h1>
  이건 나의 첫 레일즈 페이지입니다.

<% end %>
